@page
@model Matriculado.Pages.Personas.AgregarAlumnosModel
@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 class="mb-4 text-center">Alta de Alumno</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    Nombre
                                </label>
                                <input class="form-control"
                                       placeholder="Nombre: Juan" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    Apellido Paterno
                                </label>
                                <input class="form-control"
                                       placeholder="Apellido paterno: Pérez" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    Apellido Materno
                                </label>
                                <input class="form-control"
                                       placeholder="Apellido materno: López" />
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    Fecha de Nacimiento
                                </label>
                                <input type="date"
                                       class="form-control" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    CURP
                                </label>
                                <input class="form-control text-uppercase"
                                       placeholder="CURP: GODE561231HDFRRN09" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">
                                    Género
                                </label>
                                <select class="form-select">
                                    <option value="">Seleccione un género</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">
                                Tipo de Persona
                            </label>
                            <select class="form-select">
                                <option value="">Seleccione un tipo de persona</option>
                            </select>
                            <span class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Registrar Alumno
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
