@page
@model Matriculado.Pages.Personas.IndexModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 class="mb-4 text-center">Alta de Alumno</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.Nombre" class="form-label">
                                    Nombre
                                </label>
                                <input asp-for="Alumno.Nombre"
                                       class="form-control"
                                       placeholder="Nombre: Juan" />
                                <span asp-validation-for="Alumno.Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.ApellidoPaterno" class="form-label">
                                    Apellido Paterno
                                </label>
                                <input asp-for="Alumno.ApellidoPaterno"
                                       class="form-control"
                                       placeholder="Apellido paterno: Pérez" />
                                <span asp-validation-for="Alumno.ApellidoPaterno" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.ApellidoMaterno" class="form-label">
                                    Apellido Materno
                                </label>
                                <input asp-for="Alumno.ApellidoMaterno"
                                       class="form-control"
                                       placeholder="Apellido materno: López" />
                                <span asp-validation-for="Alumno.ApellidoMaterno" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.FechaNacimiento" class="form-label">
                                    Fecha de Nacimiento
                                </label>
                                <input asp-for="Alumno.FechaNacimiento"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="Alumno.FechaNacimiento" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.CURP" class="form-label">
                                    CURP
                                </label>
                                <input asp-for="Alumno.CURP"
                                       class="form-control text-uppercase"
                                       placeholder="CURP: GODE561231HDFRRN09" />
                                <span asp-validation-for="Alumno.CURP" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Alumno.GeneroId" class="form-label">
                                    Género
                                </label>
                                <select asp-for="Alumno.GeneroId"
                                        class="form-select"
                                        asp-items="Model.Generos">
                                    <option value="">Seleccione un género</option>
                                </select>
                                <span asp-validation-for="Alumno.GeneroId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Alumno.TipoPersonaId" class="form-label">
                                Tipo de Persona
                            </label>
                            <select asp-for="Alumno.TipoPersonaId"
                                    class="form-select"
                                    asp-items="Model.TiposPersona">
                                <option value="">Seleccione un tipo de persona</option>
                            </select>
                            <span asp-validation-for="Alumno.TipoPersonaId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Registrar Alumno
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
